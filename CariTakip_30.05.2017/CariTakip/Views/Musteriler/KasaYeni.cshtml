    @model CariTakip.ViewModels.KasaYeni

    <h1 style="text-align:center;color:#ffffff;">Yeni Kasa Oluştur: @Model.MusteriAdi @Model.MusteriSoyadi </h1>


    @using (Html.BeginForm("KasaYeni","Musteri",FormMethod.Post))
        {
            @Html.ValidationSummary(true)
        
            <div class="form-group">
                 @Html.Label("Tarih", new { @style = "color:#ffffff" })
                 @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control",@required="required" })
            </div>
            <div class="form-group">
                @Html.Label("Açıklama", new { @style = "color:#ffffff" })
                @Html.TextBoxFor(x => x.Aciklama, new { @class = "form-control", @required = "required" })
            </div>
              <div class="form-group">
               @Html.Label("Ödeme Şekli", new { @style = "color:#ffffff" })
               @Html.DropDownList("OdemeID", ViewBag.OdemeID as SelectList, new { @class = "form-control" })
            </div>
               <div class="form-group"> 
                @Html.Label("Tür", new { @style = "color:#ffffff" })
                @Html.DropDownList("TurID", ViewBag.TurID as SelectList, new { @class = "form-control" })
              
           </div>
           
            
            <div class="form-group">
                @Html.Label("Borç", new { @style = "color:#ffffff" })
                @Html.TextBoxFor(x => x.GirilenMiktar, new { @class = "form-control", @required = "required" })
            </div>
            <div class="form-group">
                @Html.Label("Alacak", new { @style = "color:#ffffff" })
                @Html.TextBoxFor(x => x.CikanMiktar, new { @class = "form-control", @required = "required" })
            </div>
        
    
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-warning"/>
                <a href="@Url.Action("KasaIndex", "Musteriler", new {Id=Model.MusteriID})" class="btn btn-primary pull-right">Geri Dön</a>
            </div>
 }
<hr />
<ul style="color:white">
    <li>
        Eğer tür olarak BORÇ seçiliyse Borç alanı doldurulması zorunludur.
    </li>
    <li>
        Eğer tür olarak AlACAK seçiliyse Alacak alanı doldurulması zorunludur.
    </li>
</ul>
